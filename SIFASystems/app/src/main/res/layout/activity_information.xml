<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.sifasystems.activity.UserInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:textSize="@dimen/_18ssp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp" />

        <TextView
            android:id="@+id/tv_center_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Center Information"
            android:textSize="@dimen/_18ssp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxx"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="NAME:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxx"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="LOCATION:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxx"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="UPDATED AT:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_updated_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxx"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Photo:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:id="@+id/img_coordinator"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Center Number:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_center_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Federal Government College"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="School Name:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/txtColor"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Federal Government College"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            style="@style/AppTheme.ButtonStyle"
            android:text="Confirm" />
    </RelativeLayout>
</LinearLayout>
